{
  "compilerOptions": {
    "target": "ES2022", // Set the target JavaScript version
    "module": "NodeNext", // Use ES modules
    "moduleResolution": "NodeNext", // Use Node.js module resolution for ES modules
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Source directory
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enable ES module interoperability
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
    "allowJs": true, // Allow JavaScript files to be compiled
    "checkJs": true, // Enable type checking for JavaScript files
    "resolveJsonModule": true, // Allow importing JSON files
    "isolatedModules": true, // Ensure each file can be transpiled independently
    "noEmitOnError": true, // Do not emit files if there are type errors
    "sourceMap": true // Generate source maps for debugging
  },
  "include": ["src/**/*"], // Include all files in the src directory
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist directories
}
