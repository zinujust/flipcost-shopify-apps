{
  "compilerOptions": {
    "target": "ES6", // Set the JavaScript version to compile to
    "module": "ESNext", // Use CommonJS modules (default for Node.js)
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Source directory for TypeScript files
    "strict": true, // Enable strict type-checking
    "esModuleInterop": true, // Enable compatibility with ES modules
    "skipLibCheck": true // Skip type-checking of declaration files
  },
  "include": ["src/**/*", "src/index.ts"], // Include all files in the src directory
  "exclude": ["node_modules"] // Exclude node_modules
}
